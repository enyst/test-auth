# Application Mode Configuration
APP_MODE=single_user  # Options: single_user, multi_user

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# GitHub OAuth Configuration (required for auth modes)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Single User Mode Settings
ENABLE_SU_AUTH=false  # Set to true to enable GitHub OAuth in single user mode
SU_GITHUB_USERNAME=your_username  # Only this user can access when SU auth is enabled

# Multi User Mode Settings
MU_ADMIN_GITHUB_USERNAME=admin_username  # Initial admin user in MU mode

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Default GitHub token for single user mode (when no auth)
DEFAULT_GITHUB_TOKEN=ghp_your_token_here
